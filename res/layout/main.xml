<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center_horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<SeekBar
    android:id="@+id/brightness"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_marginTop="4px"
    android:layout_marginBottom="1px"
    android:max="10000"
    />
<TextView 
    android:id="@+id/current_value" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" 
    android:text="/255"
    android:textSize="27sp"
    />
<LinearLayout 
    android:gravity="center_horizontal" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<Button 
	android:id="@+id/min"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="setValueOnClick"
	android:text="@string/min"/>
<Button 
	android:id="@+id/percent_25"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="setValueOnClick"
	android:text="@string/percent_25"/>
<Button 
	android:id="@+id/percent_50"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="setValueOnClick"
	android:text="@string/percent_50"/>
<Button 
	android:id="@+id/percent_75"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="setValueOnClick"
	android:text="@string/percent_75"/>
<Button 
	android:id="@+id/percent_100"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="setValueOnClick"
	android:text="@string/percent_100"
	/>
</LinearLayout>    

<LinearLayout 
    android:gravity="center_horizontal" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<Button
	android:id="@+id/power_led"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/power_led"
	android:onClick="powerLEDOnClick"
	/>
<Button
	android:id="@+id/nightmode"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/nightmode_button"
	android:onClick="nightmodeOnClick"
	/>
</LinearLayout>
<TextView 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@string/custom_buttons"
    />
<LinearLayout 
    android:gravity="center_horizontal" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<Button
	android:id="@+id/custom0"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/custom0"
	android:onClick="customLoad"
	android:longClickable="true"/>
<Button
	android:id="@+id/custom1"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/custom1"
	android:onClick="customLoad"
	android:longClickable="true"/>
<Button
	android:id="@+id/custom2"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/custom2"
	android:onClick="customLoad"
	android:longClickable="true"/>
<Button
	android:id="@+id/custom3"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/custom3"
	android:onClick="customLoad"
	android:longClickable="true"/>
<Button
	android:id="@+id/custom4"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/custom4"
	android:onClick="customLoad"
	android:longClickable="true"/>
</LinearLayout>
</LinearLayout>
